<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup">

            <RadioButton
                android:id="@+id/button_ClassScene1"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/custom_radio_button1"
                android:button="@android:color/transparent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:layout_margin="16dp"
                android:text="Class with Projector"
                android:textSize="20sp" />
            <RadioButton
                android:id="@+id/button_ClassScene2"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/custom_radio_button1"
                android:button="@android:color/transparent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:layout_margin="16dp"
                android:text="Class without Projector"
                android:textSize="20sp" />
            <RadioButton
                android:id="@+id/button_ClassScene3"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/custom_radio_button1"
                android:button="@android:color/transparent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:layout_margin="16dp"
                android:text="Recreation with Projector"
                android:textSize="20sp" />
            <RadioButton
                android:id="@+id/button_ClassScene4"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/custom_radio_button1"
                android:button="@android:color/transparent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:layout_margin="16dp"
                android:text="Recreation without Projector"
                android:textSize="20sp" />
            <RadioButton
                android:id="@+id/button_ClassSceneCustom"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/custom_radio_button1"
                android:button="@android:color/transparent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:layout_margin="16dp"
                android:text="Custom"
                android:textSize="20sp" />

        </RadioGroup>
    </RelativeLayout>
</ScrollView>